---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import type { ImageMetadata } from "astro";
import { Masonry } from "astro-masonry";
import ImageModal from "../components/ImageModal.astro";
import { setupExifData, type DataTypes } from "@/functions/exifdata";

const listOfFireworks = import.meta.glob<{ default: ImageMetadata }>("/src/assets/fireworks-images/*.jpeg", { eager: true });

const mapping = Object.entries(listOfFireworks).map<Promise<DataTypes>>(setupExifData);

const listing = await Promise.all(mapping);
---

<Layout>
	<h3 class='text-4xl font-bold text-center p-4'>Disney Fireworks by Jesse Slomowitz</h3>

	<Masonry
		sortByHeight={true}
		class='custom-masonry'
		columnClass='custom-column-class'
		breakpointCols={{
			default: 5,
			1100: 3,
			700: 2,
			500: 1,
		}}>
		{
			listing.map(async ({ image_data, googleMapsSrc, date }, index) => {
				return (
					<div id='image-container' class='relative overflow-hidden rounded-lg border border-gray-300'>
						<button id='show-dialog-button' class='absolute top-10 right-10 z-10 btn btn-xs bg-blue-500 text-white hover:shadow-lg' data-GPSSrc={googleMapsSrc} data-date={date} data-index={index}>
							See Image
						</button>
						<div id='index' class='absolute top-10 left-10 z-10 badge bg-gray-800 text-white opacity-50'>
							{index + 1}
						</div>
						<Image src={image_data} alt='Fireworks' id={`mason-image-${index}`} class='transition-transform duration-500 hover:scale-110' onload="this.parentNode.classList.add('loaded');" />
					</div>
				);
			})
		}
	</Masonry>
	<ImageModal />
</Layout>

<style lang='scss'>
	#index {
		position: absolute;
		top: 1%;
		left: 1%;
		z-index: 2;
	}

	button {
		position: absolute;
		top: 1%;
		right: 1%;
		z-index: 2;
	}

	dialog {
		background-color: rgba(0, 0, 0, 0.8);
		border: none;
		border-radius: 0.5rem;
		overflow: visible;
		scroll: auto;
	}

	#dialog-content {
		scrollbar-width: none;
	}
</style>

<style is:global>
	.custom-masonry {
		/* Your custom styles */
		/* You will need to add display: flex */
		display: flex;
		gap: 0.3rem;
		padding: 1rem;
	}

	.custom-column-class {
		/* Your custom column styles */
		display: flex;
		flex-direction: column;
		gap: 0.3rem;
		justify-content: space-between;
	}
</style>

<script>
	import constructModalImage from "@/functions/constructModalImage";

	const dialog = document.querySelector<HTMLDialogElement>("dialog");
	const showDialogButton = document.querySelectorAll<HTMLButtonElement>("#show-dialog-button");
	const iframe = dialog?.querySelector("iframe");
	const date = dialog?.querySelector<HTMLDivElement>("#date");

	showDialogButton.forEach(button => constructModalImage(dialog, iframe, date, button));
</script>
