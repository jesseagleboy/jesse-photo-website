---
import "@/styles/global.css";

interface Props {
	jsonld?: Record<string, unknown>[] | Record<string, unknown>;
	title?: string;
}

const { title = "Disney Fireworks by Jesse Slomowitz" } = Astro.props;
---

<!doctype html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width, initial-scale=1.0' />
		<link rel='icon' type='image/png' href='/favicon.png' />
		<link rel='sitemap' href='/sitemap-index.xml' />
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
		<!-- Preconnect to Cloudinary and Google Maps domains -->
		<link rel='preconnect' href='https://res.cloudinary.com' />
		<link rel='preconnect' href='https://maps.googleapis.com' />
		<slot name='json+ld' />
		<meta name='description' content='Images of Disney Fireworks with Google Maps implementation, by Jesse Slomowitz' />
		<meta name='author' content='Jesse Slomowitz' />
		<meta name='copyright' content='Jesse Slomowitz' />
	</head>
	<body class='p-5'>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		overflow: auto;
		margin: 0;
	}

	@view-transition {
		navigation: auto; /* enabled! */
	}
</style>
